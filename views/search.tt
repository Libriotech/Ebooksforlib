[% META pagetitle = 'Search' %]


<div class="article-bg-white">
<div class="container content-container">
<div class="row">
<div class="span12">

[% IF books.size || creators.size %]

    [% SET allbooks = [] %]

    [% IF books.size %]
        [% allbooks.push( books ) %]
    [% END %]

    [% IF creators.size %]
        [% FOREACH creator IN creators %]
            [% allbooks.push( creator.books ) %]
        [% END %]
    [% END %]

    [%# Sort the books by title %]
    [% SET sortedbooks = allbooks.sort('title') %]

    <p class="half-top">[% l('You searched for') %] <b>[% params.q | html_entity %]</b> [% l('and got') %] [% sortedbooks.size %] [% l('results') %]:</p>
    [% INCLUDE 'books_table.tt' books=sortedbooks %]

[% ELSE %]
    <p>[% l('Sorry, no matches found.') %]</p>
[% END %]

</div>
</div>
</div>
</div>
